<h1>{{title}}</h1>

<a href="/posts/create" class="btn btn-primary">
    Add news
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Post name</th>
            <th width="150">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each post_table}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                <div class="d-flex">
                    <a href="/posts/delete/{{_id}}" class="btn btn-secondary me-2">
                    Delete
                </a>

                <a href="/posts/edit/{{_id}}" class="btn btn-secondary">
                    Edit
                </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>